@model List<Realestate_Dapper_UI.Dtos.ServicesDtos.ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmet Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlığı</th>
                                <th scope="col">Servis Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                if (item.ServiceStatus == true)
                                {
                                    ViewBag.Cs = "Aktif";
                                }
                                else if (item.ServiceStatus == false)
                                {
                                    ViewBag.Cs = "Pasif";
                                }

                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ServiceName</td>
                                    <td>@ViewBag.Cs</td>
                                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Service/CreateService/" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>


